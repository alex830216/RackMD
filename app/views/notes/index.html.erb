<%= render "header" %>
<div style="display: flex"
     data-controller="searchTag"
  <button data-action="searchTag#toggle">標籤</button>
  <div  data-searchTag-target="box"
        style="height: 200px;
              width: 300px;
              display: none;
              background-color: darkgrey;
              margin-top: 25px;
              border-radius: 5px;
              position: absolute;">
    <input type="text" placeholder="搜尋標籤名稱">
    <br>
    <a href="#">選擇所有標籤</a>
    <a href="#">Ｘ清除選取</a>
    <div id="tag-list">
      <ul>
        <% @tags.each do |t| %>
        <li><%= t.title %></li>
        <% end %>
      </ul>

    </div>

  </div>
  <button>顯示方式</button>
</div>
<p>---------------無標籤----------------</p>
<ul>
  <% @notes.each do |note| %>
      <li>
          <%= link_to note.title, note_path(note) %>
          <%= note.updated_at %>
          <%= link_to "刪除筆記", note_path(note), method: "delete", data: {confirm: "確定刪除筆記？"}%>
      </li>
  <% end %>
</ul>

<%= paginate @notes %>