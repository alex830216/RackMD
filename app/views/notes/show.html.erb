<nav style="background-color: lightgray;">
  <%= link_to "HackMD", notes_path %>
</nav>
<div>
<% if @note.edit_status %>
  <%= form_for(@note) do |f| %>
    <div>
      <%= f.label :title, "文章標題" %>
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label :content, "文章內容" %>
      <%= f.text_area :content %>
    </div>
    <div>
      <%= f.label :tag_list, "標籤" %> 
      <%= f.text_field :tag_list %> 
    </div>
    <%= f.submit "手動存檔" %>
  <% end %>
<% else %>
    標題：<%= @note.title %>
    <br>
    內文：<%= @note.content %>
    <br>
    標籤：<%= @note.tag_list %>
<% end %>
  <button>
    <%= link_to '編輯開關', note_is_edit_path(@note) %>
  </button>
  <button>
    <%= link_to '留言開關', note_is_comment_path(@note) %>
  </button>
</div>
<% if @note.comment_status %>
  <div id ="form">
    <%# 用非同步方式送資料，local: false = remote: true %>
    <%= form_with(model: @comment, url: note_comments_path(@note), local: false ) do |f|  %>
      <%= f.hidden_field :id %>
      <%= f.text_area :content %>
      <%= f.submit "新增留言" %>
    <% end %>
    <ul class= "comments">
      <% @comments.each do |comment| %>
        <li>
          <%= comment.content %>
          <%= link_to "編輯", edit_comment_path(comment) %>
          <%= link_to "刪除", comment_path(comment), method: 'delete',data: { confirm: '確定嗎？', id: comment.id }%>
        </li>
      <% end %> 
    </ul>
  </div>
<% end %>