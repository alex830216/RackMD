
<a href="#" id="favorite_btn" data-id="<%= @note.id %>">
  <div class="rounded-full h-6 w-6 bg-gray-100"></div>
  <div class="text-xs">讚賞</div>
</a>

<div>
  標題：<%= @note.title %>
  <br>
  內文：<%= @note.content %>
  <%# 用非同步方式送資料，local: false = remote: true %>
  <%= form_with(model: @comment, url: note_comments_path(@note), local: false) do |f| %>
    <%= f.text_area :content %>
    <%= f.submit "新增留言" %>
  <% end %>
  
  <ul class= "comments">
    <% @comments.each do |comment| %>
      <li>
        <%= comment.content %>
        <%= link_to "編輯", edit_comment_path(comment) %>
        <%= link_to "刪除", comment_path(comment), method: 'delete',data: { confirm: '確定嗎？', id: comment.id }%>
      </li>
    <% end %> 
  </ul>
</div>